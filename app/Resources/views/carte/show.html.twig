{% extends 'default/base.html.twig' %}

{% block body %}
    <h1>Carte</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ carte.id }}</td>
            </tr>
            <tr>
                <th>Numcarte</th>
                <td>{{ carte.numCarte }}</td>
            </tr>
            <tr>
                <th>Datecreation</th>
                <td>{% if carte.dateCreation %}{{ carte.dateCreation|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Dateexp</th>
                <td>{% if carte.dateExp %}{{ carte.dateExp|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Duree</th>
                <td>{{ carte.duree }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ carte.type }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ carte.prix }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('carte_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('carte_edit', { 'id': carte.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
